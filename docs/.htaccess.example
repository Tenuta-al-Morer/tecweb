<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /mstevani/

    # URL senza estensione → .php 
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+)$ $1.php [L]

    # Redirect .html → .php
    RewriteRule ^(.+)\.html$ $1.php [L,R=301]
</IfModule>

DirectoryIndex index.php index.html

# Pagine di Errore Personalizzate
ErrorDocument 404 /mstevani/scripts/php/404.php
ErrorDocument 403 /mstevani/scripts/php/403.php
ErrorDocument 500 /mstevani/scripts/php/500.php

# Protezione file sensibili
<FilesMatch "^(config\.php|common\.php|\.htaccess|DBConnection\.php)$">
    Require all denied
</FilesMatch>
